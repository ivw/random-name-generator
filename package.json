{
  "name": "random-name-generator",
  "description": "A nice user interface for generating random words or names using a markov chain. Built in React.js. http://ivw.github.io/random-name-generator/",
  "author": "ivw",
  "main": "js/app.js",
  "dependencies": {
    "events": "^1.0.2",
    "foswig": "^1.0.2",
    "lodash": "^3.1.0",
    "promise": "^6.1.0",
    "react": "^0.12.2",
    "react-bootstrap": "^0.14.0",
    "react-infinite-scroll": "^0.1.5",
    "react-loader": "^1.1.0",
    "superagent": "^0.21.0"
  },
  "devDependencies": {
    "browserify": "^8.1.3",
    "envify": "^3.2.0",
    "reactify": "^1.0.0",
    "uglify-js": "~2.4.16",
    "watchify": "^2.3.0"
  },
  "scripts": {
    "start": "watchify -o compiled/bundle.js -v -d .",
    "build": "browserify . | uglifyjs -cm > compiled/bundle.js"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
